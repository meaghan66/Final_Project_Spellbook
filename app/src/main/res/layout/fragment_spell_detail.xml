<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/parchment_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/spellName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medieval_sharp"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/deep_red"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/spellLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medieval_sharp"
            android:textSize="26sp"
            android:textStyle="bold"
            android:text="Level: "
            android:textColor="@color/deep_red"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/spellDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medieval_sharp"
            android:textSize="18sp"
            android:textColor="@color/spell_text_color"
            android:paddingBottom="24dp" />

        <TextView
            android:id="@+id/spellComponents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medieval_sharp"
            android:text="Components:"
            android:textColor="@color/deep_red"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/spellCastingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medieval_sharp"
            android:text="Casting Time:"
            android:textColor="@color/deep_red"
            android:textStyle="bold"
            android:paddingBottom="24dp" />

        <Button
            android:id="@+id/prepareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medieval_sharp"
            android:backgroundTint="@color/accent_gold"
            android:textColor="@android:color/black"
            android:text="Prepare Spell"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medieval_sharp"
            android:backgroundTint="@color/deep_red"
            android:textColor="@android:color/white"
            android:text="Back"
            android:layout_gravity="center" />

    </LinearLayout>
</ScrollView>
